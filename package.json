{
  "name": "douyu-monitor",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-gift-data && vite build && npm run copy-404",
    "generate-gift-data": "node scripts/generateGiftData.js",
    "copy-404": "node -e \"const fs = require('fs'); const path = require('path'); const src = path.join(__dirname, 'dist', 'index.html'); const dest = path.join(__dirname, 'dist', '404.html'); fs.copyFileSync(src, dest); console.log('Copied index.html to 404.html');\"",
    "serve": "vite preview",
    "test": "vitest run tests/unit",
    "test:watch": "vitest tests/unit",
    "test:coverage": "vitest run tests/unit --coverage",
    "test:e2e": "playwright test",
    "test:e2e:open": "playwright test --ui",
    "test:e2e:report": "playwright test && node scripts/generateTestReport.cjs",
    "generate-report": "node scripts/generateTestReport.cjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@vant/touch-emulator": "^1.3.2",
    "node-fetch": "^3.3.2",
    "playwright": "^1.57.0",
    "vant": "^3.4.5",
    "vue": "^3.2.31",
    "vue-clipboard3": "^1.0.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.6",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-vue": "^10.7.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "sass": "^1.97.2",
    "terser": "^5.46.0",
    "vite": "^7.3.1",
    "vite-plugin-style-import": "^1.4.1",
    "vitest": "^4.0.17",
    "vue-eslint-parser": "^10.2.0"
  }
}
